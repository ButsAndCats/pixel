{
  "compilerOptions": {
    "outDir": "./dist",
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": false,
      }
    ],
    "baseUrl": "./"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
  ],
}
